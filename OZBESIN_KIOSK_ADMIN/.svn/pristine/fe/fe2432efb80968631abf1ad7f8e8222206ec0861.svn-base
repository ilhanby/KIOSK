<Controls:MetroWindow x:Class="OZBESIN_KAYIT.Forms.Yemeks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OZBESIN_KAYIT.Forms"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        mc:Ignorable="d"
        BorderThickness="0" GlowBrush="Black" ResizeMode="CanResizeWithGrip" WindowStyle="None"
        WindowTransitionsEnabled="True" Title="YEMEK" Height="700" Width="1000" WindowState="Maximized" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <WrapPanel Grid.Row="0" VerticalAlignment="Center" Margin="5">
            <Button Content="KAYDET" Width="150" Background="Lime" Margin="5,0" BorderBrush="{x:Null}" Click="Kaydetbtn_Click"/>
            <Button Content="SİL" Width="150" Background="Red" Margin="5,0" BorderBrush="{x:Null}" Click="Silbtn_Click"/>
            <Button Content="YENİ" Width="150" Background="#FF4E989B" Margin="5,0" BorderBrush="{x:Null}" Click="Yenibtn_Click"/>
        </WrapPanel>
        <Grid Grid.Row="1" >
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0.639"/>
                    <GradientStop Color="#FF4E989B" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="ARAMA" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Height="28" VerticalAlignment="Top" Width="80"/>
            <TextBox Grid.Column="1" x:Name="Aramatxt" Height="30" TextWrapping="Wrap" Width="320" VerticalAlignment="Top" HorizontalAlignment="Center" TextChanged="Aramatxt_TextChanged" Margin="10,0"/>
            <Label Grid.Column="2" Content="Aramalar Yemek Adına Göredir" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Height="28" VerticalAlignment="Top" Width="auto"/>
        </Grid>
        <Grid Grid.Row="2" x:Name="katgrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Yemek Kategorisi Seçiniz :" HorizontalAlignment="Left" Height="24" FontSize="11" VerticalAlignment="Top" Width="auto" Margin="11,10,0,0" />
            <TextBox x:Name="YemekIDtxt" Text="{Binding YemekID}" HorizontalAlignment="Right" Height="20" VerticalAlignment="Top" TextWrapping="Wrap" Width="30" Visibility="Hidden" TextChanged="YemekIDtxt_TextChanged"/>
            <TextBox x:Name="YemekKategoriIDtxt" Text="{Binding YemekKategoriID}" VerticalAlignment="Top" HorizontalAlignment="Right"  TextWrapping="Wrap" Visibility="Hidden" Width="30" Height="20"/>
            <ComboBox x:Name="YemekKategoriIDcmb" Height="30" Margin="161,8,0,0" VerticalAlignment="Top" VerticalContentAlignment="Top" HorizontalAlignment="Stretch" SelectionChanged="KategoriIDcmb_SelectionChanged">
            </ComboBox>
            <Button Content="..." FontSize="11" HorizontalAlignment="Right" VerticalContentAlignment="Top" VerticalAlignment="Top" Width="40" Click="Button_Click" BorderBrush="{x:Null}" Background="#FF4E989B" Height="20" Margin="0,82,0,170"/>
            <Label Content="Yemek Adı :" HorizontalAlignment="Left" Height="25" FontSize="11" VerticalAlignment="Top" Width="auto" Margin="11,45,0,0"/>
            <TextBox x:Name="YemekAdtxt" Text="{Binding YemekAd}" Height="25" Margin="161,43,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" HorizontalAlignment="Stretch" />
            <TextBox x:Name="YemekResimtxt" Text="{Binding YemekResim}" Height="25" Margin="161,78,45,0" TextWrapping="Wrap"  VerticalAlignment="Top" HorizontalAlignment="Stretch"/>
            <Label Content="Yemek Resmi :" HorizontalAlignment="Left" Height="25" FontSize="11" VerticalAlignment="Top" Width="auto" Margin="11,80,0,0"/>
            <Label Content="Yemeğin Malzemeleri :" HorizontalAlignment="Left" Height="25" FontSize="11" VerticalAlignment="Top" Width="auto" Margin="11,125,0,0"/>
            <TextBox x:Name="YemekMalzemetxt" Text="{Binding YemekMalzeme1}" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch" Height="65" Margin="161,125,20,0" VerticalAlignment="Top" Width="auto">
            </TextBox>
            <Label Content="Yemeğin Yapılış :" HorizontalAlignment="Left" Height="25" FontSize="11" VerticalAlignment="Top" Width="auto" Margin="11,205,0,0"/>
            <TextBox x:Name="YemekHazirlamatxt" Text="{Binding YemekHazırlama}" TextWrapping="Wrap" AcceptsReturn="True" HorizontalAlignment="Stretch" Height="65" Margin="161,205,20,0" VerticalAlignment="Top" Width="auto">
            </TextBox>
            <Label Content="Durum :" HorizontalAlignment="Left" Height="25" FontSize="11" VerticalAlignment="Top" Width="auto" Margin="13,280,0,0"/>
            <ComboBox x:Name="Durumtxt" Text="{Binding Durum}" Height="30" Margin="161,280,45,0" VerticalContentAlignment="Top" VerticalAlignment="Top" HorizontalAlignment="Stretch">
                <ComboBoxItem Content="Açık" Background="Lime"/>
                <ComboBoxItem Content="Kapalı" Background="Red" Foreground="White"/>
            </ComboBox>
            <Grid Grid.Column="1" x:Name="gridurun" Visibility="Hidden">
                <Label Content="ÜRÜN ARAMA" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                <TextBox x:Name="UrunAramatxt" Height="30" TextWrapping="Wrap" Width="200" VerticalAlignment="Top" HorizontalAlignment="Center" TextChanged="UrunAramatxt_TextChanged" Margin="0,20"/>
                <ListView x:Name="listUrun" Margin="0,55,0,5" ItemsSource="{Binding}" VerticalAlignment="Stretch" SelectionMode="Multiple">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="checkbox1" Content="{Binding UrunAd}" Tag="{Binding UrunID}" IsChecked="{Binding Checked,Mode=TwoWay}" Checked="checkbox1_Checked" Unchecked="checkbox1_Unchecked"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Grid>
            <Grid Grid.Column="2">
                <Image x:Name="img" Source="{Binding Path=YemekResim}" HorizontalAlignment="Stretch" VerticalAlignment="Center" Stretch="Fill" Margin="70"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FF4E989B" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <DockPanel  Margin="20,0,20,10">
                <DataGrid Name="datagrd" AutoGenerateColumns="False" Background="{x:Null}" IsReadOnly="True" SelectionChanged="listKategori_SelectionChanged" >
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding YemekID}"/>
                        <DataGridTextColumn Header="YEMEK KATEGORİ ADI" Binding="{Binding YemekKategoriAd}"/>
                        <DataGridTextColumn Header="YEMEK ADI" Binding="{Binding YemekAd}" Width="200"/>
                        <DataGridTextColumn Header="YEMEĞİN MALZEMELERİ" Binding="{Binding YemekMalzeme1}" Width="200"/>
                        <DataGridTextColumn Header="YEMEĞİN YAPILIŞI" Binding="{Binding YemekHazırlama}" Width="300"/>
                        <DataGridTextColumn Header="YEMEK RESMİ" Binding="{Binding YemekResim}" Width="200"/>
                        <DataGridTextColumn Header="DURUM" Binding="{Binding Durum}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Grid>
    </Grid>
</Controls:MetroWindow>
